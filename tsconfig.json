{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"strict": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"declaration": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"allowJs": false,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src", "index.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
